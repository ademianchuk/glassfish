{
  "convertable" : true,
  "jps"         : "https://raw.githubusercontent.com/annajel/glassfish-cluster/master/addons/auto-cluster.jps",  
  "defaultState": false,
    
   "compatibleAddons": ["glassfish-cluster-addon"],
   "nodeGroupData": {
    "skipNodeEmails": true,
    "scalingMode": "CLONE",
    "adminUrl": "",
    "isResetServicePassword": false
  },
  "description" : "Interconnection of GlassFish servers with pre-configured session replication and load balancing. <a href='https://jelastic.com/blog/glassfish-payara-auto-clustering-cloud-hosting/'>Learn More</a><img width='290' height='156' src='https://raw.githubusercontent.com/jelastic/icons/master/glassfish/jelastic/images/tip-auto-clustering.svg?sanitize=true'>",
  "skipOnEnvInstall": true,
   "extraNodes": [
    {
      "nodeGroup": "das",
      "nodeType": "${clusterNode.nodeType}",     
      "cloudlets": 32,
      "displayName": "DAS",
      "count": 1,
      "startService": false,
      "isDeploySupport": false,
      "validation": {
       "tag": "${clusterNode.tag}",
       "scalingMode": "NEW",
       "maxCount": 1
      }
    },
    {
    "nodeType": "docker",
    "nodeGroup": "docker2",
    "count": 1,
    "diskLimit": "1T",
    "extipv6": true,
    "displayName": "Docker MySQL",
    "scalingMode": "NEW",
    "fixedCloudlets": 2,
    "flexibleCloudlets": 8,
    "image": "mysql",
    "mission": "docker",
    "startService": false,
    "cmd": "/test/command",
    "volumes": [
      "/external",
      "/data",
      "/master",
      "/local"
      ],
    "env": {
      "JELASTIC_PORTS": "1111, 2222, 3333, 4444"
    },
    "links": [
      "cp:gf"
    ]
  }
 ]
}
